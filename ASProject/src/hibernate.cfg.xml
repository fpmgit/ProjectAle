<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">Asterion</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/asProject</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.show.sql">true</property>
  <property name="hibernate.hbm2ddl.auto">create</property>
  <mapping class="domain.Game"/>
  <mapping class="domain.Square"/>
  <mapping class="domain.Level"/>
  <mapping class="domain.RegisteredUser"/>
  <mapping class="domain.Administrator"/>
  <mapping class="domain.Player"/>
  <mapping class="domain.Strategy"/>
  <mapping class="domain.TimeStrategy"/>
  <mapping class="domain.TriesStrategy"/>
 </session-factory>
</hibernate-configuration>
